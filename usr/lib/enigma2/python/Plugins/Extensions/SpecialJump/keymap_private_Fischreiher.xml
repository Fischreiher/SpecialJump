<keymap>
	<map context="SpecialJumpActions">
		<!-- SpecialJump -->
		<key id="KEY_LEFT"        mapto="specialjump_backwards"              flags="m" />
		<key id="KEY_RIGHT"       mapto="specialjump_forwards"               flags="m" />
		<key id="KEY_LEFT"        mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_RIGHT"       mapto="specialjump_doNothing"              flags="brl" />
		<!-- small SpecialJump -->
		<!--         F2 on remote generates KEY_F6 event -->
		<!--         F3 on remote generates KEY_F6 event in new driver, same as F2, so use KEY_ARCHIVE now -->
		<key id="KEY_F6"          mapto="specialjump_backwards_small"        flags="m" />
		<key id="KEY_ARCHIVE"     mapto="specialjump_forwards_small"         flags="m" />
		<key id="KEY_F6"          mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_ARCHIVE"     mapto="specialjump_doNothing"              flags="brl" />

		<!-- programmable jumps on color keys (you don't want that) -->
		<key id="KEY_RED"         mapto="specialjump_jump1"                  flags="b" />
		<key id="KEY_GREEN"       mapto="specialjump_jump2"                  flags="b" />
		<key id="KEY_YELLOW"      mapto="specialjump_jump3"                  flags="b" />
		<key id="KEY_BLUE"        mapto="specialjump_jump4"                  flags="b" />
		<key id="KEY_BLUE"        mapto="specialjump_debugmessagebox"        flags="l" />
		<key id="KEY_BLUE"        mapto="specialjump_doNothing"              flags="mr" />
		
		<!-- during live TV: TEXT = teletext / "long TEXT" = subtitles -->
		<key id="KEY_TEXT"        mapto="specialjump_startTeletext"          flags="b" />
		<key id="KEY_TEXT"        mapto="specialjump_toggleSubtitleTrack_skipTeletext"  flags="l" />
		<key id="KEY_TEXT"        mapto="specialjump_doNothing"              flags="mr" />

		<!-- Fast Zap Mode support / Unterstützung für Fast Zap Mode -->
		<key id="KEY_1"           mapto="specialjump_jumpkey1"               flags="m" />
		<key id="KEY_4"           mapto="specialjump_jumpkey4"               flags="m" />
		<key id="KEY_7"           mapto="specialjump_jumpkey7"               flags="m" />
		<key id="KEY_3"           mapto="specialjump_jumpkey3"               flags="m" />
		<key id="KEY_6"           mapto="specialjump_jumpkey6"               flags="m" />
		<key id="KEY_9"           mapto="specialjump_jumpkey9"               flags="m" />
		<key id="KEY_2"           mapto="specialjump_jumpkey2"               flags="m" />
		<key id="KEY_5"           mapto="specialjump_jumpkey5"               flags="m" />
		<key id="KEY_8"           mapto="specialjump_jumpkey8"               flags="m" />
		<key id="KEY_CHANNELDOWN" mapto="specialjump_channelDown"            flags="mr" />
		<key id="KEY_CHANNELUP"   mapto="specialjump_channelUp"              flags="mr" />
		<key id="KEY_CHANNELDOWN" mapto="specialjump_doNothing"              flags="bl" />
		<key id="KEY_CHANNELUP"   mapto="specialjump_doNothing"              flags="bl" />

		<!-- avoid event view on 'unpause' by "KEY_OK" (for boxes without "KEY_UNPAUSE") -->
		<key id="KEY_OK"          mapto="specialjump_OK"                     flags="b" />
		<key id="KEY_OK"          mapto="specialjump_OKlong"                 flags="l" />
		<key id="KEY_OK"          mapto="specialjump_doNothing"              flags="mr" />
		
		<!-- various ... -->
		<key id="KEY_F1"          mapto="specialjump_toggleLCDBlanking"      flags="b" />
		<key id="KEY_F1"          mapto="specialjump_emcpin"                 flags="l" />
		<key id="KEY_F4"          mapto="specialjump_jump8"                  flags="m" />
		<!--         F4 on my SONY multi remote is a system key, no long press possible -->
		<key id="KEY_F1"          mapto="specialjump_doNothing"              flags="mr" />
		<key id="KEY_F4"          mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_AUDIO"       mapto="specialjump_toggleAudioTrack"       flags="m" />
		<key id="KEY_AUDIO"       mapto="specialjump_doNothing"              flags="brl" />
	</map>
	<!--=================================================================================-->
	<map context="SpecialJumpMoviePlayerActions">
		<!-- SpecialJump -->
		<key id="KEY_LEFT"        mapto="specialjump_backwards"              flags="m" />
		<key id="KEY_RIGHT"       mapto="specialjump_forwards"               flags="m" />
		<key id="KEY_LEFT"        mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_RIGHT"       mapto="specialjump_doNothing"              flags="brl" />
		<!-- small SpecialJump -->
		<!--         F2 on remote generates KEY_F6 event -->
		<!--         F3 on remote generates KEY_F6 event in new driver, same as F2, so use KEY_ARCHIVE now -->
		<key id="KEY_F6"          mapto="specialjump_backwards_small"        flags="m" />
		<key id="KEY_ARCHIVE"     mapto="specialjump_forwards_small"         flags="m" />
		<key id="KEY_F6"          mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_ARCHIVE"     mapto="specialjump_doNothing"              flags="brl" />

		<!-- programmable jumps on color keys (you don't want that) -->
		<key id="KEY_RED"         mapto="specialjump_jump1"                  flags="m" />
		<key id="KEY_GREEN"       mapto="specialjump_jump2"                  flags="m" />
		<key id="KEY_YELLOW"      mapto="specialjump_jump3"                  flags="m" />
		<key id="KEY_BLUE"        mapto="specialjump_jump4"                  flags="b" />
		<key id="KEY_BLUE"        mapto="specialjump_debugmessagebox"        flags="l" />
		<key id="KEY_RED"         mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_GREEN"       mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_YELLOW"      mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_BLUE"        mapto="specialjump_doNothing"              flags="mr" />

		<!-- during playback: TEXT = subtitles / "long TEXT" = recorded teletext -->
		<key id="KEY_TEXT"        mapto="specialjump_toggleSubtitleTrack"    flags="b" />
		<key id="KEY_TEXT"        mapto="specialjump_startTeletext"          flags="l" />
		<key id="KEY_TEXT"        mapto="specialjump_doNothing"              flags="mr" />
		
		<!-- avoid event view on 'unpause' by "KEY_OK" (for boxes without "KEY_UNPAUSE") -->
		<key id="KEY_OK" mapto="specialjump_OK" flags="b" />
		<key id="KEY_OK" mapto="specialjump_doNothing" flags="mr" />

		<!-- Show jump distance for normal jump keys -->
		<key id="KEY_1"           mapto="specialjump_jumpkey1"               flags="m" />
		<key id="KEY_4"           mapto="specialjump_jumpkey4"               flags="m" />
		<key id="KEY_7"           mapto="specialjump_jumpkey7"               flags="m" />
		<key id="KEY_3"           mapto="specialjump_jumpkey3"               flags="m" />
		<key id="KEY_6"           mapto="specialjump_jumpkey6"               flags="m" />
		<key id="KEY_9"           mapto="specialjump_jumpkey9"               flags="m" />

		<!-- Zap (dual function P+/P- and play/pause) / Zappen (Doppelfunktion P+/P- und Play/Pause) -->
		<key id="KEY_CHANNELDOWN" mapto="specialjump_channelDown"            flags="mr" />
		<key id="KEY_CHANNELUP"   mapto="specialjump_channelUp"              flags="mr" />
		<key id="KEY_CHANNELDOWN" mapto="specialjump_doNothing"              flags="bl" />
		<key id="KEY_CHANNELUP"   mapto="specialjump_doNothing"              flags="bl" />
		
		<!-- Experimental integrated cutlist editor / Experimenteller integrierter Schnittlisten-Editor -->
		<key id="KEY_PREVIOUS"    mapto="specialjump_jumpPreviousMark"       flags="b" />
		<key id="KEY_0"           mapto="specialjump_toggleMark"             flags="b" />
		<key id="KEY_NEXT"        mapto="specialjump_jumpNextMark"           flags="b" />
		<key id="KEY_PREVIOUS"    mapto="specialjump_toggleMarkIn"           flags="l" />
	<!--<key id="KEY_0"           mapto="specialjump_callMovieCut"           flags="l" /> -->
		<key id="KEY_0"           mapto="specialjump_callCutListEditor"      flags="l" />
		<key id="KEY_NEXT"        mapto="specialjump_toggleMarkOut"          flags="l" />
		<key id="KEY_PREVIOUS"    mapto="specialjump_clearDoubleAction"      flags="m" />
		<key id="KEY_0"           mapto="specialjump_clearDoubleAction"      flags="m" />
		<key id="KEY_NEXT"        mapto="specialjump_clearDoubleAction"      flags="m" />
		<key id="KEY_PREVIOUS"    mapto="specialjump_doNothing"              flags="r" />
		<key id="KEY_0"           mapto="specialjump_doNothing"              flags="r" />
		<key id="KEY_NEXT"        mapto="specialjump_doNothing"              flags="r" />

		<!-- various ... -->
		<key id="KEY_F1"          mapto="specialjump_toggleLCDBlanking"      flags="b" />
		<key id="KEY_F1"          mapto="specialjump_emcpin"                 flags="l" />
		<key id="KEY_F4"          mapto="specialjump_jump8"                  flags="m" />
		<!--         F4 on my SONY multi remote is a system key, no long press possible -->
		<key id="KEY_F1"          mapto="specialjump_doNothing"              flags="mr" />
		<key id="KEY_F4"          mapto="specialjump_doNothing"              flags="brl" />
		<key id="KEY_AUDIO"       mapto="specialjump_toggleAudioTrack"       flags="m" />
		<key id="KEY_AUDIO"       mapto="specialjump_doNothing"              flags="brl" />
	</map>

	<!--=================================================================================-->
	<!--=== for 6-key remote                                                          ===-->
	<!--=================================================================================-->
	
	<!-- P+/P- in EMC MovieSelection -->
	<map context="PluginMovieSelectionActions">
		<key id="KEY_CHANNELUP"   unmap="EMCBqtPlus" />
		<key id="KEY_CHANNELDOWN" unmap="EMCBqtMnus" />
		<key id="KEY_CHANNELUP"   mapto="EMCUp"            flags="mr" />
		<key id="KEY_CHANNELDOWN" mapto="EMCDown"          flags="mr" />
	</map>

	<!-- OK in EMC MovieSelection -->
	<map context="PluginMovieSelectionActions">
		<key id="KEY_OK"          unmap="EMCOK" />
		<key id="KEY_OK"          mapto="EMCOK"            flags="b" />
		<key id="KEY_OK"          mapto="EMCEXIT"          flags="l" />
	</map>

	<!-- POWER in EMC MovieSelection -->
	<map context="PluginMovieSelectionActions">
		<key id="KEY_POWER"       unmap="EMCEXIT" />
	</map>

	<!-- P+/P- in EventView -->
	<map context="EventViewActions">
		<key id="KEY_CHANNELUP"   mapto="pageUp"           flags="m" />
		<key id="KEY_CHANNELDOWN" mapto="pageDown"         flags="m" />
	</map>

	<!--=================================================================================-->
	<!--=== more P+/P- usage                                                          ===-->
	<!--=================================================================================-->

	<!-- P+/P- in MediaCenter Player -->
	<map context="MP_SP_Move">
		<key id="KEY_CHANNELUP"   unmap="SPMoveUp" />
		<key id="KEY_CHANNELDOWN" unmap="SPMoveDown" />
	</map>
	<map context="InfobarSeekActions">
		<key id="KEY_CHANNELUP"   mapto="unPauseService"   flags="m" />
		<key id="KEY_CHANNELDOWN" mapto="playpauseService" flags="m" />
	</map>

	<!-- Teletext P+/P- for next/prev. page -->
	<map context="TeletextActions">
		<key id="KEY_UP"          unmap="nextPage" />
		<key id="KEY_DOWN"        unmap="prevPage" />
		<key id="KEY_CHANNELUP"   unmap="zoomMode" />
		<key id="KEY_CHANNELDOWN" unmap="screenMode" />
		
		<key id="KEY_UP"          mapto="zoomMode"         flags="m" />
		<key id="KEY_DOWN"        mapto="screenMode"       flags="m" />
		<key id="KEY_CHANNELUP"   mapto="nextPage"         flags="mr" />
		<key id="KEY_CHANNELDOWN" mapto="prevPage"         flags="mr" />
	</map>

