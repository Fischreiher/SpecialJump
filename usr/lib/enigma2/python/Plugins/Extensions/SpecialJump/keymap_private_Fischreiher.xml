	</map>-->

	<!-- faster EMC start (but no media player) 
	<map context="InfobarActions">
		<key id="KEY_VIDEO"       unmap="showMovies"       flags="unmap" />
		<key id="KEY_VIDEO"       unmap="showMediaPlayer"  flags="unmap" />
		<key id="KEY_VIDEO"       mapto="showMovies"       flags="m" />
	</map>-->

