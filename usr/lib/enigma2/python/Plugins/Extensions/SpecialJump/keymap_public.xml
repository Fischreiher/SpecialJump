<!-- "m" = make             -->
<!-- "b" = break            -->
<!-- "r" = repeated         -->
<!-- "l" = long             -->
<!-- "mr" = make or repeated-->

<keymap>
<map context="SpecialJumpActions">
	<key id="KEY_F1"     mapto="specialjump_jump1"     flags="b" />
	<!--         F2 on remote generates KEY_F6 event -->
	<key id="KEY_F6"     mapto="specialjump_jump2"     flags="b" />
	<key id="KEY_F3"     mapto="specialjump_jump3"     flags="b" />
	<key id="KEY_F4"     mapto="specialjump_jump4"     flags="b" />
	<key id="KEY_RED"    mapto="specialjump_backwards"            flags="b" />
	<key id="KEY_GREEN"  mapto="specialjump_forwards"             flags="b" />
	<key id="KEY_YELLOW" mapto="specialjump_toggleAudioTrack"     flags="b" />
	<key id="KEY_BLUE"   mapto="specialjump_toggleSubtitleTrack"  flags="b" />
	<key id="KEY_CHANNELDOWN" mapto="specialjump_channelDown" flags="b" />
	<key id="KEY_CHANNELUP"   mapto="specialjump_channelUp"   flags="b" />
</map>
<map context="SpecialJumpMoviePlayerActions">
	<key id="KEY_F1"     mapto="specialjump_jump1"     flags="b" />
	<!--         F2 on remote generates KEY_F6 event -->
	<key id="KEY_F6"     mapto="specialjump_jump2"     flags="b" />
	<key id="KEY_F3"     mapto="specialjump_jump3"     flags="b" />
	<key id="KEY_F4"     mapto="specialjump_jump4"     flags="b" />
	<key id="KEY_RED"    mapto="specialjump_backwards"            flags="b" />
	<key id="KEY_GREEN"  mapto="specialjump_forwards"             flags="b" />
	<key id="KEY_YELLOW" mapto="specialjump_toggleAudioTrack"     flags="b" />
	<key id="KEY_BLUE"   mapto="specialjump_toggleSubtitleTrack"  flags="b" />
	<key id="KEY_1"      mapto="specialjump_jumpkey1"  flags="m" />
	<key id="KEY_4"      mapto="specialjump_jumpkey4"  flags="m" />
	<key id="KEY_7"      mapto="specialjump_jumpkey7"  flags="m" />
	<key id="KEY_3"      mapto="specialjump_jumpkey3"  flags="m" />
	<key id="KEY_6"      mapto="specialjump_jumpkey6"  flags="m" />
	<key id="KEY_9"      mapto="specialjump_jumpkey9"  flags="m" />
	<key id="KEY_CHANNELDOWN" mapto="specialjump_channelDown" flags="b" />
	<key id="KEY_CHANNELUP"   mapto="specialjump_channelUp"   flags="b" />
	<key id="KEY_PREVIOUS"    mapto="specialjump_jumpPreviousMark" flags="m" />
    <key id="KEY_0"           mapto="specialjump_toggleMark"       flags="m" />
	<key id="KEY_NEXT"        mapto="specialjump_jumpNextMark"     flags="m" />
</map>
</keymap>
